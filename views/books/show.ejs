<!-- Szczegóły dotyczące autora -->
<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">
  <div>
    <img class="book-cover" src="<%= book.coverImagePath %>">
    <div class="book-details-btn-grid">
      <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edytuj</a>
      <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
      <a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author.id %>">Szczegóły autora</a>
    </div>
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Autor:</div>
    <div><%= book.author.name %></div>
    <div class="book-details-label">Data publikacji:</div>
    <div><%= book.publishDate.toDateString() %></div>
    <div class="book-details-label">Liczba stron:</div>
    <div><%= book.pageCount %></div>
    <div class="book-details-label">Opis:</div>
    <div><%= book.description %></div>
  </div>
</div>